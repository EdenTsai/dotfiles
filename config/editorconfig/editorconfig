# EditorConfig
#
# EditorConfig helps maintain consistent coding styles
# for multiple developers working on the same project
# across various editors and IDEs.
#
# @link https://editorconfig.org
# @link https://editorconfig-specification.readthedocs.io
# @link https://github.com/editorconfig/editorconfig-vim#supported-properties

# This is the top-most .editorconfig file
# and stop the .editorconfig file search on the current file.
root = true

[*]

# Use UTF-8 as default charset.
charset = utf-8

# Use 4 spaces as default indentation.
indent_size = 4
indent_style = space

# Unix-style newlines with a newline ending every file.
end_of_line = lf
insert_final_newline = true

# Remove all whitespace characters preceding
# newline characters in the file.
trim_trailing_whitespace = true

[{*.markdown,*.md,README}]

indent_style = space
indent_size = 4

# Don't remove the trailing whitespace in Markdown.
#
# - We can use two or more spaces
#   (commonly referred to as "trailing whitespace")
#   as line breaks in nearly every Markdown application.
trim_trailing_whitespace = false
