# vim: set filetype=vim

# Basics
set line-graphics = yes
set id-width = 40
set author-width = 12
set show-id = no
set show-author = yes
set show-date = default
set show-refs = yes
set show-rev-graph = yes
set show-line-numbers = yes

# Colors
color cursor white color236
color diff-stat white color234

# Bindings.

## Generic bindings.
bind generic <Ctrl-b> scroll-page-up
bind generic <Ctrl-f> scroll-page-down
bind generic + move-page-down

# Easy jump to previous/next patches in stage/diff view
bind stage <Ctrl-J> :/^diff --
bind stage <Ctrl-K> :?^diff --
bind diff <Ctrl-J> :/^diff --
bind diff <Ctrl-K> :?^diff --
